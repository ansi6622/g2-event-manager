<div class="event_form">
  <h2>Please Add an Event</h2>
  <%= form_for @event do |f| %>
    <% if @event.errors.present? %>
      <div class="errors">
        <ul class="errors">
          <% @event.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :date %>
    <%= f.date_field :date, id: "event_date" %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :location %>
    <%= f.text_field :location %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :capacity %>
    <%= f.number_field :capacity %>

    <%= f.label :category %>
    <%= f.text_field :category %>

    <%= f.label :event_pic %>
    <%= f.file_field :event_pic %>

    <%= f.submit "Create Event" %>

  <% end %>
</div>

